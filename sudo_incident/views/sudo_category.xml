<odoo>
    <record id="incident_category_action" model="ir.actions.act_window">
        <field name="name">Category List</field>
        <field name="res_model">sudo_incident.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Categories" id="sudo_category_menu" parent="sudo_incident.menu_root"
              action="incident_category_action"/>
    <!--  Form View  -->
    <record id="sudo_incident_category_new_view_form" model="ir.ui.view">
        <field name="name">Categories Form</field>
        <field name="model">sudo_incident.category</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                         <field name="parent_id_domain" invisible="1"/>
                        <field name="parent_id" domain="parent_id_domain"/>
                    </group>
                    <group>
                        <field name="child_ids"/>
                    </group>
                </group>

            </form>
        </field>
    </record>
    <!--  Tree(list) View  -->
    <record id="sudo_category_new_view_tree" model="ir.ui.view">
        <field name="name">Category List</field>
        <field name="model">sudo_incident.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name" string="Sudo Incident List"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>
</odoo>