<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="incident_cause_code_action" model="ir.actions.act_window">
        <field name="name">Incident Cause Code</field>
        <field name="res_model">sudo_incident.cause_code</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Incident Cause code" id="sudo_incident_sudo_cause_menu" parent="sudo_incident.menu_root"
              action="incident_cause_code_action"/>

          <record id="sudo_cause_code_view_form" model="ir.ui.view">
        <field name="name">Incident Cause Code Form</field>
        <field name="model">sudo_incident.cause_code</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <group>
                    <group>
                        <field name="incident_code"/>
                    </group>

                </group>

            </form>
        </field>
    </record>
    <!--  Tree(list) View  -->
    <record id="sudo_cause_code_view_tree" model="ir.ui.view">
        <field name="name">Sudo Casue Code List</field>
        <field name="model">sudo_incident.cause_code</field>
        <field name="arch" type="xml">
            <tree>
<!--                <field name="name"/>-->
               <field name="incident_code" string="Incident Cause Code List"/>
            </tree>
        </field>
    </record>


    </data>
</odoo>