<odoo>
    <record id="incident_service_action" model="ir.actions.act_window">
        <field name="name">Incident Service</field>
        <field name="res_model">sudo_incident.service</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Incident Service" id="sudo_services_menu" parent="sudo_incident._menu"
              action="incident_service_action"/>
    <!--  Form View  -->
    <record id="sudo_incident_services_view_form" model="ir.ui.view">
        <field name="name">Services Form</field>
        <field name="model">sudo_incident.service</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration" duplicate="0">
                <group>
                    <group>
                        <field name="services"/>
                        <field name="serviceschild_ids"/>
                    </group>
                    <group>
                        <field name="services_parent_domain" invisible="1"/>
                        <field name="services_parent" domain="services_parent_domain"/>
                    </group>

                </group>

            </form>
        </field>
    </record>
    <!--  Tree(list) View  -->
    <record id="sudo_incident_services_new_view_tree" model="ir.ui.view">
        <field name="name">Services List</field>
        <field name="model">sudo_incident.service</field>
        <field name="arch" type="xml">
            <tree>

                <field name="display_name" string="Sudo Services List"/>
                <field name="services_parent"/>
            </tree>
        </field>
    </record>
</odoo>