<odoo>
    <record id="incident_affected_ci_action" model="ir.actions.act_window">
        <field name="name">Affected CI</field>
        <field name="res_model">incident.affected</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Affected CI" id="sudo_affected_new_ci_menu" parent="sudo_incident._menu"
              action="incident_affected_ci_action"/>
    <!--  Form View  -->
    <record id="sudo_incident_affected_view_form" model="ir.ui.view">
        <field name="name">Affected Form</field>
        <field name="model">incident.affected</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <!--  Tree(list) View  -->
    <record id="sudo_affected_view_tree" model="ir.ui.view">
        <field name="name">Affected List</field>
        <field name="model">incident.affected</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>