<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="sudo_incident_management_form" model="ir.ui.view">
            <field name="name">Incident Mangement Form</field>
            <field name="model">sudo_incident.sudo_incident</field>
            <field name="inherit_id" ref="sudo_incident.sudo_incident_form_id"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='outage_end_time']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="helpdesk_ticket_id" options="{'no_create': True,}"
                           />

                </xpath>

            </field>
        </record>

        <!-- Inherit Tree View to Modify it -->
        <record id="sudo_incident_management_tree" model="ir.ui.view">
            <field name="name">Incident Mangement Tree</field>
            <field name="model">sudo_incident.sudo_incident</field>
            <field name="inherit_id" ref="sudo_incident.list"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='incident_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="helpdesk_ticket_id"/>

                </xpath>

            </field>
        </record>

        <record id="sudo_incident_management_helpdesk" model="ir.ui.view">
            <field name="name">Sudo Incident Management</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="sudo_incident_select" type="object"
                            class="oe_stat_button " icon="fa-edit">
                        <field string="Incident" name="incident_count" widget="statinfo"/>

                    </button>
                </xpath>
            </field>
        </record>

        <record id="inherit_helpdesk_form" model="ir.ui.view">
            <field name="name">help.desk.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="header" position="inside">
                    <button name="incident_create" string="Create Incident" class="btn btn-primary" type="object"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>